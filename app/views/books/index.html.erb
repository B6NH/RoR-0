<h2>Books</h2>


<p>
  <%= link_to 'Add book', new_book_path(@author) %> |
  Order:
  <% if params[:order].nil?||params[:order]=="asc" %>
    <%= link_to 'Desc', books_path(order: :desc) %>
  <% else %>
    <%= link_to 'Asc', books_path(order: :asc) %>
  <% end %>
</p>

<% if @books.any? %>
  <ul>
  <% @books.each do |b| %>
    <li>
      <%= link_to b.title, book_path(b) %> |
      <%= link_to 'Edit', edit_book_path(b) %> |
      <%= link_to 'Destroy', b,
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
  </ul>
<% else %>
  <p>No books</p>
<% end %>

<h2>Authors</h2>

<% if flash[:notice] %>
  <div style="color:green;"><%= flash[:notice] %></div>
<% end %>

<p>
  <%= link_to 'Add author', new_author_path %> |
  Order:
  <% if params[:order].nil?||params[:order]=="asc" %>
    <%= link_to 'Desc', authors_path(order: :desc) %>
  <% else %>
    <%= link_to 'Asc', authors_path(order: :asc) %>
  <% end %>

</p>

<ul>
<% @authors.each do |a| %>
  <li>
    <%= link_to a.name, author_path(a) %> |
    <%= link_to 'Edit', edit_author_path(a) %> |
    <%= link_to 'Destroy', author_path(a),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
  </li>
<% end %>
</ul>

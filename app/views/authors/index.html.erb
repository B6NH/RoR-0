<h2>Authors</h2>

<%= link_to 'Add author', new_author_path %>

<ul>
<% @authors.each do |a| %>
  <li>
    <%= link_to a.name, author_books_path(a) %> |
    <%= link_to 'Edit', edit_author_path(a) %> |
    <%= link_to 'Destroy', author_path(a),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
  </li>
<% end %>
</ul>
